{
  "name": "Rally Issue Helper",
  "short_name": "Rally Issue Helper",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "128": "icon_128.png"
  },
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "background.js",
    "jquery-2.1.4.min.js"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://rally1.rallydev.com/*"
      ],
      "js": [
        "jquery-2.1.4.min.js",
        "visible.min.js",
        "foreground.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "commands": {
    "copy-title": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Select FormattedID on the page"
    }
  }
}