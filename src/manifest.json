{
  "name": "Rally Copy Helper",
  "short_name": "Rally Copy Helper",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "128": "images/icon_128.png"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "scripts/background.js"
    ]
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "commands": {
    "copy-to-email": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Copy issue to Email"
    }
  }
}